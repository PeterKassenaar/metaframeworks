---
interface Props {
	title: string;
	body: string;
	href: string;
	logo: string;
}

const { href, title, body, logo } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<div class="card-header">
			<img src={logo} alt={`${title} logo`} class="framework-logo" />
			<h2>
				{title}
				<span>&rarr;</span>
			</h2>
		</div>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #ffffff;
		border-radius: 7px;
		transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: rgb(var(--accent-dark));
		background-color: #ffffff;
		transition: all 0.3s ease;
	}
	.card-header {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.framework-logo {
		width: 32px;
		height: 32px;
		object-fit: contain;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #4b5563;
	}
	.link-card:is(:hover, :focus-within) {
		background: linear-gradient(120deg, 
			rgb(var(--accent-light)) 0%,
			rgba(var(--accent-light), 0.3) 50%,
			rgba(var(--accent-light), 0.1) 100%
		);
		box-shadow: 0 10px 15px -3px rgb(var(--accent-light) / 0.3);
		transform: translateY(-2px);
	}
	.link-card:is(:hover, :focus-within) a {
		background: transparent;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>